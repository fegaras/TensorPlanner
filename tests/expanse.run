#!/bin/bash
#SBATCH -A uot166
#SBATCH --job-name="diablo"
#SBATCH --output="run.log"
#SBATCH --partition=compute
#SBATCH --nodes=2
#SBATCH --ntasks-per-node=128
#SBATCH --mem=249325M
#SBATCH --export=ALL
#SBATCH --time=10    # time limit in minutes

module purge
module load slurm cpu/0.17.3b gcc/10.2.0 intel-mpi/2019.10.317
mpivars.sh 

SW=/expanse/lustre/projects/uot166/fegaras
DIABLO_HOME=/home/$USER/TensorPlanner-intel
export SCALA_HOME=$SW/scala-2.12.3
export SPARK_HOME=$SW/spark-3.1.2-bin-hadoop3.2

JARS=.:$DIABLO_HOME/lib/diablo.jar:$DIABLO_HOME/lib/mpi.jar
for I in `ls $SPARK_HOME/jars/*.jar -I *unsafe*`; do
    JARS=$JARS:$I
done

rm -rf classes
mkdir -p classes

scala_files="Multiply.scala"
for f in $scala_files; do
    echo compiling $f ...
    scalac -d classes -cp classes:$JARS $f >/dev/null
done

# only one executor per node because it uses Scala's parallel collections for execution
srun --mpi=pmi2 -n 2 scala -classpath classes:$DIABLO_HOME/lib/diablo.jar:$DIABLO_HOME/lib/mpi.jar -J-Xmx16g Multiply
