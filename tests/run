#/bin/bash

DIABLO="$(cd `dirname $0`/..; pwd -P)"
MPI_HOME=$HOME/.openmpi

export PATH="$MPI_HOME/bin:$PATH"
export LD_LIBRARY_PATH="$MPI_HOME/lib/:$LD_LIBRARY_PATH"

export OMP_NUM_THREADS=16

mpirun --use-hwthread-cpus scala -classpath classes:${DIABLO}/lib/diablo.jar:${MPI_HOME}/lib/mpi.jar -J-Xmx12g -J-Xms12g -J-Xss100m $*
