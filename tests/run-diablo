#/bin/bash

DIABLO="$HOME/diablo"

if [ -z ${SPARK_HOME} ]; then
   SPARK_HOME=~/spark-3.2.1-bin-hadoop3.2
fi

export HADOOP_CONF_DIR=

jar cf test.jar -C classes .

# max available memory in GB
mem=`awk '/MemFree/ { printf "%.0f", $2/1024/1024 }' /proc/meminfo`

${SPARK_HOME}/bin/spark-submit --jars ${DIABLO}/lib/diablo.jar --class $1 --driver-memory ${mem}g --executor-memory ${mem}g --conf spark.logLineage=true --conf "spark.executor.extraJavaOptions='-Xss512m'" --driver-java-options "-Xss512m" --master local[*] test.jar $2 $3 $4 $5 $6 $7
