#/bin/bash

exec() { echo "\$ $@" ; "$@" ; }

if [ -z $block_size ]; then
   block_size=1000
fi

echo "import edu.uta.diablo._
import Math._
object Test {
  def main ( args: Array[String] ) {
    parami(block_dim_size,$block_size)
    param(asynchronous,true)
    //param(trace,false)
    param(cxx_generation,true)
    q(\"\"\"" >cxxgen.sc

cat $1  >>cxxgen.sc

echo "\"\"\")
  }
}" >>cxxgen.sc

mkdir -p classes
scalac -d classes -cp ${JARS} cxxgen.sc >cxxgen.log

if [ "$debug" == "y" ]; then
    exec mpic++ -g cxxgen.cpp -fopenmp -foffload=nvptx-none -fcf-protection=none -fno-stack-protector -no-pie -I${DIABLO_HOME}/include -L${DIABLO_HOME}/lib -ldiablo
else
    exec mpic++ -O3 -DNDEBUG cxxgen.cpp -fopenmp -foffload=nvptx-none -fcf-protection=none -fno-stack-protector -no-pie -I${DIABLO_HOME}/include -L${DIABLO_HOME}/lib -ldiablo
fi
